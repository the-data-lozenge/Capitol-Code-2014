<% layout('./auth') -%>

<%- include ../includes/messages %>

<form action="/users" method="post" class="offset1 login form-horizontal">
  <input type="hidden" name="_csrf" value="<%= csrf_token %>">

  <div class="control-group">
      <label for="name" class="control-label">Full name</label>
      <div class="controls">
        <input id="name" type="text" name="name" placeholder="Full name" class="input-medium" value="<%= user.name %>">
      </div>
    </div>
  <div class="control-group">
    <label for="email" class="control-label">Email</label>
    <div class="controls">
      <input id="email" type="email" name="email" placeholder="Email" class="input-medium" value="<%= user.email %>">
    </div>
  </div>

  <div class="control-group">
      <label for="username" class="control-label">Username</label>
      <div class="controls">
        <input id="username" type="text" name="username" placeholder="Username" class="input-medium" value="<%= user.username %>">
      </div>
  </div>
  <div class="control-group">
    <label for="password" class="control-label">Password</label>
    <div class="controls">
      <input id="password" type="password" name="password" placeholder="Password" class="input-medium">
    </div>
  </div>

  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Sign up</button>&nbsp;
    or&nbsp;<a href="/login" class="show-signup">login</a>
  </div>
</form>

